page
  display flex
  flex-direction column

.avatar,
.get-user-info
  width 300rpx !important
  height 300rpx
  border-radius 150rpx
  margin 0 auto
  border 2px solid white

.get-user-info
  padding 0
  line-height 300rpx
  font-size 48rpx
  font-weight 200

.header
  padding-bottom 40rpx
  margin 0 20rpx
  border-bottom 4rpx solid #DDD

.photo-list
  border-top 2rpx solid white
  margin 0 20rpx
  flex 1
  display flex
  flex-wrap wrap
  padding-left 40rpx
  padding-top 40rpx

.photo-item
  background-color white
  width 288rpx
  height 288rpx
  border 8rpx solid black
  border-radius 30rpx

.photo-image
  width 100%
  height 100%
  margin-right 40rpx
  margin-bottom 40rpx
  border-radius 30rpx
