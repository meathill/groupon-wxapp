page
  background-color #F0F0F0

.new-group
  background-color white
  border-radius 8rpx
  box-shadow 0 4rpx 4rpx rgba(black, .1)
  margin 1em
  padding 1em

.label-text
  line-height 2.5em
  margin-left .5em

.upload-button
  width 5em
  max-width 5em
  height 5em
  padding 0
  margin-left 0
  margin-right 0
  display inline-flex
  justify-content center
  align-items center

  icon
    transform rotate(180deg)

label.d-block
  color #444
  font-size 14px
  margin-bottom .25em

.thumbnail
  width 5em
  height 5em
  margin-left 1em
